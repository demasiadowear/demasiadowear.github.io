/* Placeholder per immagine collezione WorldWide */
.collection-worldwide {
  background-color: #000000;
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 56.25%; /* Aspect ratio 16:9 */
  overflow: hidden;
}

.collection-worldwide::after {
  content: "WORLDWIDE";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #39FF14;
  font-family: 'Orbitron', sans-serif;
  font-size: 3rem;
  font-weight: bold;
  text-align: center;
  letter-spacing: 0.5rem;
}
