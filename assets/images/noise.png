/* Placeholder per immagine noise */
.noise-overlay {
  background-color: #000000;
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.noise-overlay::after {
  content: "NOISE";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #39FF14;
  font-family: monospace;
  font-size: 1rem;
  font-weight: bold;
  text-align: center;
  letter-spacing: 0.1rem;
}
